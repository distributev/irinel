{
  "name": "game-of-sins",
  "version": "1.0.0",
  "description": "Game of Sins",
  "homepage": "https://github.com/maximegris/angular-electron",
  "author": {
    "name": "Virgil",
    "email": "virgil.trasca@gmail.com"
  },
  "keywords": [
    "angular",
    "angular 6",
    "electron",
    "typescript",
    "sass"
  ],
  "main": "main.js",
  "private": true,
  "scripts": {
    "postinstall": "npm run postinstall:electron && npx electron-builder install-app-deps",
    "postinstall:web": "node postinstall-web",
    "postinstall:electron": "node postinstall",
    "ng": "ng",
    "start": "npm run postinstall:electron && npm-run-all -p ng:serve electron:serve",
    "build": "npm run postinstall:electron && npm run electron:serve-tsc && ng build",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "ng:serve": "ng serve",
    "ng:serve:web": "npm run postinstall:web && ng serve -o",
    "electron:serve-tsc": "tsc -p tsconfig-serve.json",
    "electron:serve": "wait-on http-get://localhost:4200/ && npm run electron:serve-tsc && electron . --serve",
    "electron:local": "npm run build:prod && electron .",
    "electron:linux": "npm run build:prod && npx electron-builder build --linux",
    "electron:windows": "npm run build:prod && npx electron-builder build --windows",
    "electron:mac": "npm run build:prod && npx electron-builder build --mac",
    "test": "npm run postinstall:web && ng test",
    "e2e": "cross-env TS_NODE_PROJECT=e2e/tsconfig.e2e.json mocha -r ts-node/register e2e/**/*.e2e.ts",
    "packaging": "",
    "icons:step1:fontawesome2png": "rimraf playground/fontawesome2png && font-awesome-svg-png --color steelblue --sizes 1024 --dest playground/fontawesome2png",
    "icons:step2:iconmaker": "rimraf src/assets/icons && electron-icon-maker --input=playground/fontawesome2png/steelblue/png/1024/free-code-camp.png --output=./src/assets",
    "icons:step3:refreshicons": "node ./src-packaging/scripts/refresh-icons.js",
    "database:step1:newsqlitefile": "node ./src-packaging/scripts/database-new-sqlite-file.js",
    "database:step2:runmigrations": "knex migrate:latest --env production",
    "database:step3:backupsqlitefile": "node ./src-packaging/scripts/database-backup-sqlite-file.js",
    "all:steps:icons": "npm run icons:step1:fontawesome2png && npm run icons:step2:iconmaker && npm run icons:step3:refreshicons",
    "all:steps:database": "npm run database:step1:newsqlitefile && npm run database:step2:runmigrations && npm run database:step3:backupsqlitefile",
    "package:prepare": "rimraf dist && rimraf release && rimraf playground && npm run electron:windows && npm run all:steps:database && node ./src-packaging/scripts/package-prepare.js",
    "package:zip": "node ./src-packaging/scripts/package-zip.js",
    "package": "npm run package:prepare && npm run e2e && npm run package:zip"
  },
  "dependencies": {
    "@toverux/ngx-sweetalert2": "^4.0.0",
    "sweetalert2": "^7.28.4",
    "admin-lte": "^2.4.8",
    "bcryptjs": "^2.4.3",
    "bookshelf": "^0.13.3",
    "bootstrap": "^3.3.7",
    "font-awesome": "^4.7.0",
    "jquery": "^3.2.1",
    "knex": "^0.15.2",
    "moment": "^2.22.2",
    "ngx-bootstrap": "^3.0.1",
    "slash": "^2.0.0",
    "sqlite3": "^4.0.2",
    "toastr": "^2.1.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.6.3",
    "@angular/cli": "6.1.2",
    "@angular/common": "6.1.2",
    "@angular/compiler": "6.1.2",
    "@angular/compiler-cli": "6.1.2",
    "@angular/core": "6.1.2",
    "@angular/forms": "6.1.2",
    "@angular/http": "6.1.2",
    "@angular/language-service": "6.1.2",
    "@angular/platform-browser": "6.1.2",
    "@angular/platform-browser-dynamic": "6.1.2",
    "@angular/router": "6.1.2",
    "@ngx-translate/core": "10.0.1",
    "@ngx-translate/http-loader": "3.0.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/jquery": "^3.3.10",
    "@types/mocha": "^5.2.5",
    "@types/node": "8.9.4",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "codelyzer": "4.2.1",
    "core-js": "2.5.6",
    "cross-env": "^5.2.0",
    "electron": "2.0.7",
    "electron-builder": "20.28.1",
    "electron-reload": "1.2.2",
    "folder-zip-sync": "^1.0.5",
    "font-awesome-svg-png": "^1.2.2",
    "mocha": "^5.2.0",
    "npm-run-all": "4.1.3",
    "npx": "10.2.0",
    "rimraf": "^2.6.2",
    "rxjs": "6.2.2",
    "spectron": "^4.0.0",
    "fs-jetpack": "^2.1.1",
    "ts-node": "6.0.3",
    "tslint": "5.10.0",
    "typescript": "2.7.2",
    "wait-on": "2.1.0",
    "webdriver-manager": "12.0.6",
    "zone.js": "0.8.26"
  }
}
